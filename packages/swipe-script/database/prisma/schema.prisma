datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum DifficultyLevel {
  NO_EXPERIENCE
  BEGINNER
  JUNIOR_DEVELOPER
  MEDIOR_DEVELOPER
  SENIOR_DEVELOPER
  TECH_LEAD
}

model Question {
  id                    Int                 @id @default(autoincrement())
  questionText          String              @map("question_text")
  questionTypeId        Int                 @map("question_type_id")
  questionType          QuestionType        @relation(fields: [questionTypeId], references: [id])
  answers               Answer[]
  quizId                Int                 @map("quiz_id")
  quiz                  Quiz                @relation(fields: [quizId], references: [id])
}

model QuestionType {
  id                    Int                 @id @default(autoincrement())
  typeName              String              @map("type_name")
  questions             Question[]
}

model Answer {
  id                    Int                 @id @default(autoincrement())
  answerText            String              @map("answer_text")
  isCorrect             Boolean             @map("is_correct")
  questionId            Int                 @map("question_id")
  question              Question            @relation(fields: [questionId], references: [id])
}

model Quiz {
  id                    Int                 @id @default(autoincrement())
  slug                  String              
  title                 String
  imageUrl              String?             @map("image_url")
  difficultyLevels      DifficultyLevel[]   @map("difficulty_levels")
  questions             Question[]
  sectionId             Int                 @map("section_id")
  sections              CourseSection       @relation("SectionToQuiz", fields: [sectionId], references: [id])

  @@unique([slug, sectionId], name: "UniqueSlugPerSection")
}

model Course {
  id                    Int                 @id @default(autoincrement())
  slug                  String              @unique
  title                 String
  description           String?
  imageUrl              String?             @map("image_url")
  sections              CourseSection[]     @relation("CourseToSection")
}

model CourseSection {
  id                    Int                 @id @default(autoincrement())
  slug                  String              
  title                 String                
  content               String              
  order                 Int                 @default(autoincrement())
  courseId              Int                 @map("course_id")
  course                Course              @relation("CourseToSection", fields: [courseId], references: [id])
  quizzes               Quiz[]              @relation("SectionToQuiz")
  
  @@unique([slug, courseId], name: "UniqueSlugPerCourse")
  @@unique([id, order], name: "UniqueOrderPerCourseSection")
}