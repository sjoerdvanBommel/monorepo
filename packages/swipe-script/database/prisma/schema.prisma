datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum DifficultyLevel {
  NO_EXPERIENCE
  BEGINNER
  JUNIOR_DEVELOPER
  MEDIOR_DEVELOPER
  SENIOR_DEVELOPER
  TECH_LEAD
}

model Question {
  id                    Int                 @id @default(autoincrement())
  questionText          String              @map("question_text")
  questionTypeId        Int                 @map("question_type_id")
  questionType          QuestionType        @relation(fields: [questionTypeId], references: [id])
  answers               Answer[]
  quizSlug              String              @map("quiz_slug")
  quiz                  Quiz                @relation(fields: [quizSlug], references: [slug])
}

model QuestionType {
  id                    Int                 @id @default(autoincrement())
  typeName              String              @map("type_name")
  questions             Question[]
}

model Answer {
  id                    Int                 @id @default(autoincrement())
  answerText            String              @map("answer_text")
  isCorrect             Boolean             @map("is_correct")
  questionId            Int                 @map("question_id")
  question              Question            @relation(fields: [questionId], references: [id])
}

model Quiz {
  slug                  String              @id
  title                 String
  imageKey              String?             @map("image_key")
  difficultyLevels      DifficultyLevel[]   @map("difficulty_levels")
  questions             Question[]
}
