{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["NODE_ENV"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build", "db:push"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "db:migrate:dev": {
      "dependsOn": ["db:generate"],
      "cache": false
    },
    "db:migrate:deploy": {},
    "db:push": {
      "dependsOn": ["db:generate"],
      "cache": false
    },
    "db:seed": {
      "dependsOn": ["db:migrate:dev"],
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "dependsOn": ["docker-compose"],
      "cache": false
    },
    "lint": {},
    "docker-compose": {
      "cache": false
    },
    "clean": {},
    "setup": {
      "dependsOn": ["db:seed"]
    }
  }
}
